<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <include
        android:id="@+id/toolbar_detail"
        layout="@layout/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivProfileImage1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/toolbar_detail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvUserName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_detail"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivProfileImage1"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap"
        tools:text="@string/bprospere" />

    <ImageView
        android:id="@+id/ivPost1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/ivProfileImage1"
        android:layout_margin="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/ic_more1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toolbar_detail"
        android:layout_marginTop="-5dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_baseline_more" />

    <ImageButton
        android:id="@+id/ic_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPost1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_heart" />

    <ImageButton
        android:id="@+id/ic_chat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPost1"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ic_heart"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_chat" />

    <ImageButton
        android:id="@+id/ic_send1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPost1"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ic_chat1"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_send" />

    <ImageButton
        android:id="@+id/ic_bookmark1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPost1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_bookmark" />


    <TextView
        android:id="@+id/tvDescription1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_heart"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        tools:text="My headshot" />

    <TextView
        android:id="@+id/tvLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescription1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        tools:text="2 likes" />

    <TextView
        android:id="@+id/tvDate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvLike"
        tools:ignore="RelativeOverlap"
        tools:text="10/23/1" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvDate1"
        android:layout_marginTop="5dp"
        android:background="?android:attr/listDivider" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider2"
        android:layout_marginTop="5dp" />


</RelativeLayout>